<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johntavious.shoppingwithfriends" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="Shopping With Friends"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity android:name=".WelcomeActivity" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="Register" >
        </activity>
        <activity android:name=".FriendList" >
        </activity>
        <activity android:name=".FriendProfileActivity" >
        </activity>
        <activity
            android:name=".RegisterInterestActivity"
            android:label="@string/title_activity_register_interest" >
        </activity>
        <activity
            android:name=".InterestsListActivity"
            android:label="@string/title_activity_interests_list" >
        </activity>
        <activity
            android:name=".Tester"
            android:label="@string/title_activity_tester" >
        </activity>
        <activity
            android:name=".TempLogin"
            android:label="@string/title_activity_temp_login" >
        </activity>
        <activity
            android:name=".TempForTesting"
            android:label="@string/title_activity_temp_for_testing" >
        </activity>
    </application>

</manifest>
