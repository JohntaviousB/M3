<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johntavious.shoppingwithfriends" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/cart"
        android:label="Shopping With Friends"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity android:name=".WelcomeActivity" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="Register" >
        </activity>
        <activity android:name=".FriendList" >
        </activity>
        <activity android:name=".FriendProfileActivity" >
        </activity>
        <activity
            android:name=".RegisterInterestActivity"
            android:label="@string/title_activity_register_interest" >
        </activity>
        <activity
            android:name=".InterestsListActivity"
            android:label="@string/title_activity_interests_list" >
        </activity>
        <activity
            android:name=".Tester"
            android:label="@string/title_activity_tester" >
        </activity>
        <activity
            android:name=".TempLogin"
            android:label="@string/title_activity_temp_login" >
        </activity>
        <activity
            android:name=".TempForTesting"
            android:label="@string/title_activity_temp_for_testing" >
        </activity>
        <activity
            android:name=".PostSaleActivity"
            android:label="@string/title_activity_post_sale" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ViewSaleActivity"
            android:label="@string/title_activity_view_sale" >
        </activity>
    </application>

</manifest>
